<div class="container">
	<h1>Reply</h1>

	<div class="form-group">
		<%= form_for @comment , :url => topic_comments_path(@topic) do |f| %>
			<%= render :partial => "form" , :locals => {:f => f} %>
			<%= link_to "Cancel" , topic_path(@topic) , :class => "btn btn-primary pull-right" %>
		<% end %>
	</div>
</div>
	
	

