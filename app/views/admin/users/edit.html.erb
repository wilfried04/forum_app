<div class="container">
	<h2>Edit</h2>

	<%= form_for @user , :url => admin_user_path(@user) do |f| %>
		<div class="form-group">
			<%= f.label :role , "Role : " %>
			<%= f.text_field :role  , :class => "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :email , "Email : " %>
			<%= f.text_field :email , :class => "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :nickname , "Nickname : " %>
			<%= f.text_field :nickname  , :class => "form-control" %>
		</div>
			
		<%= f.submit :class => "btn btn-success" %>
		<%= link_to "Cancle" , admin_users_path , :class => "btn btn-primary" %>
	<% end %>
</div>
	