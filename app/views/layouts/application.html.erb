<!DOCTYPE html>
<html>
  <head>
    <title>Forum</title>

	
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
	<div class="container">
		<div class="fb-like" data-href="http://www.localhost:3000/" data-width="20px" data-layout="standard" data-action="like" data-size="large" data-show-faces="true" data-share="true"></div>
		<div class="pull-right">
			<% if current_user %>
 				<% if current_user.friendships.count < current_user.inverse_friendships.count %>
					<%= link_to "Friend Request" , friend_request_user_friendships_path(current_user) , :class => "btn btn-success" %>
 				<% end %>

				<% if current_user.fb_uid %>
					<%= image_tag current_user.avatar_file_name %>
				<% else %>
					<%# <%= image_tag current_user.avatar.url(:thumb)%> %>
				<% end %>
					
				<div class="btn-group">
				  <%= link_to current_user.email , profile_users_path(:useremail => current_user.email) , :type => "button" , :class => "btn btn-info" %>
				  <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
				    <span class="caret"></span>
				    <span class="sr-only">Toggle Dropdown</span>
				  </button>
				  <ul class="dropdown-menu">
			  		<li><%= link_to "My bookmarks" , favorite_users_path %></li>
					<li><%= link_to "My draft" , draft_users_path %></li>
					<li><%= link_to "My like" , like_users_path %></li>
					<li><%= link_to "my good friend" , friendship_user_friendships_path(current_user) %></li>
					<li><%= link_to "Users" , users_path %></li>
					<li role="separator" class="divider"></li>
					<li><%= link_to('change Password', edit_registration_path(:user) ) %></li>
				    <li><%= link_to('Sign out', destroy_user_session_path, :method => :delete) %></li>
					

			    </ul>
				</div>
		    <% else %>
				<%= link_to('registered', new_registration_path(:user)) %> |
			    <%= link_to('Sign in', new_session_path(:user)) %> |
			    <%= link_to "Sign in Facebook", user_facebook_omniauth_authorize_path %>

			<% end %>    
		</div>
	</div>


	<div class="container">
		<% if flash[:notice].present? %>
			<div class="alert alert-success" role="alert">
				<%= flash[:notice] %>
			</div>
		<% end %>


		<% if flash[:alert].present? %>
			<div class="alert alert-danger" role="alert">
				<%= flash[:alert] %>
			</div> 
		<% end %>
	</div>

    <%= yield %>
    
  </body>
</html>

<div id="fb-root"></div>
	<script>(function(d, s, id) {
	  var js, fjs = d.getElementsByTagName(s)[0];
	  if (d.getElementById(id)) return;
	  js = d.createElement(s); js.id = id;
	  js.src = "//connect.facebook.net/zh_TW/sdk.js#xfbml=1&version=v2.8&appId=1852697651643312";
	  fjs.parentNode.insertBefore(js, fjs);
	}(document, 'script', 'facebook-jssdk'));</script>
